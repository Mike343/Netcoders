@model Coders.Web.Models.TimeZones.TimeZoneCreateOrUpdate
@section scripts
{
	<script src="/content/scripts/jquery-ui-1.8.custom.min.js" type="text/javascript"></script>
    <script src="/content/scripts/coders.form.js" type="text/javascript"></script>
}
@section location
{
	<div id="location">
		<ul>
			<li class="first">@Url.Route(AdministrationRoutes.HomeIndex).Link(Resources.Titles.Administration)</li>
			<li>@Url.Route(AdministrationRoutes.TimeZoneIndex, new { sort = "offset", order = "ascending", page = "1" }).Link(Resources.Titles.TimeZones)</li>
			<li class="last">@Resources.Titles.UpdateWith.FormatInvariant(Resources.Titles.TimeZone)</li>
		</ul>
	</div>
}
<div class="title">
	<h5>@Resources.Titles.UpdateWith.FormatInvariant(Resources.Titles.TimeZone)</h5>
	<ul>
		<li class="last"><a href="@Url.Route(AdministrationRoutes.TimeZoneHistory).Value"><span>@Resources.Titles.History</span></a></li>
	</ul>
</div>
<div class="content">
	@{Html.Message(Model);}
	@{Html.ValidationResult();}
	@{Html.BeginRouteForm(AdministrationRoutes.TimeZoneUpdate);}
	<div class="form">
		<div class="fields">
			<div class="field field-first">
				<div class="label">
					<label for="Title">@Resources.Titles.Title:</label>
				</div>
				<div class="input">
					@Html.TextBoxFor(x => x.Title, new { @class = "large" })
					@Html.ValidationMessageFor(x => x.Title)
				</div>
			</div>
			<div class="field">
				<div class="label">
					<label for="Group">@Resources.Titles.Display:</label>
				</div>
				<div class="input">
					@Html.TextBoxFor(x => x.Display)
					@Html.ValidationMessageFor(x => x.Display)
				</div>
			</div>
			<div class="field">
				<div class="label">
					<label for="Group">@Resources.Titles.Offset:</label>
				</div>
				<div class="input">
					@Html.TextBoxFor(x => x.Offset)
					@Html.ValidationMessageFor(x => x.Offset)
				</div>
			</div>
			<div class="buttons">
				@Html.HiddenFor(x => x.Id)
				@Html.AntiForgeryToken()
				<input type="submit" value="@Resources.Titles.Submit" />
				<input type="reset" value="@Resources.Titles.Reset" />
			</div>
		</div>
	</div>
	@{Html.EndForm();}
</div>