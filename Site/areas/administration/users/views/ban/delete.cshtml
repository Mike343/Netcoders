@model Coders.Web.Models.Users.UserBanDelete
@section scripts
{
	<script src="/content/scripts/jquery-ui-1.8.custom.min.js" type="text/javascript"></script>
    <script src="/content/scripts/coders.form.js" type="text/javascript"></script>
}
@section location
{
	<div id="location">
		<ul>
			<li class="first">@Url.Route(AdministrationRoutes.HomeIndex).Link(Resources.Titles.Administration)</li>
			<li>@Url.Route(UsersAdministrationRoutes.BanIndex, new { sort = "created", order = "descending", page = 1 }).Link(Resources.Titles.Bans)</li>
			<li class="last">@Resources.Titles.LiftBan</li>
		</ul>
	</div>
}
<div class="title">
	<h5>@Resources.Titles.LiftBan</h5>
</div>
<div class="content">
	<div class="messages" id="message">
		<div class="message message-warning">
			<div class="image">
				<img src="/content/images/icons/warning.png" alt="@Resources.Titles.Warning" height="32" />
			</div>
			<div class="text">
				<h6>@Resources.Titles.Warning</h6>
				<ul>
					<li>@Resources.Messages.DeleteUserBan.FormatInvariant(Model.User.Name)</li>
				</ul>
			</div>
		</div>
	</div>
	@{Html.ValidationResult();}
	@{Html.BeginRouteForm(UsersAdministrationRoutes.BanDelete);}
	<div class="form">
		<div class="fields">
			<div class="buttons">
				@Html.HiddenFor(x => x.Id)
				@Html.AntiForgeryToken()
				<input type="submit" value="@Resources.Titles.Confirm" />
				@Url.Route(UsersAdministrationRoutes.BanIndex, new { sort = "created", order = "descending", page = 1 }).Link(Resources.Titles.Cancel)
			</div>
		</div>
	</div>
	@{Html.EndForm();}
</div>